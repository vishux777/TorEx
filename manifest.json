{
  "manifest_version": 3,
  "name": "SecureTor Bridge",
  "version": "2.0.1",
  "description": "Secure proxy connection with enhanced privacy features",
  "permissions": [
    "proxy",
    "storage",
    "notifications",
    "tabs",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureTor Bridge"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["enforce_security.js"],
      "matches": ["<all_urls>"]
    }
  ]
}